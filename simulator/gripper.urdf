<?xml version="1.0"?>
<robot name="gripper">

    <material name="red">
        <color rgba="0.8 0 0 1"/>
    </material>
    <material name="green">
        <color rgba="0 0.8 0 1"/>
    </material>
    <material name="yellow">
        <color rgba="0.8 0.8 0 1"/>
    </material>

    <link name="world"/>
    <link name="x"/>
    <joint name="x_joint" type="prismatic">
        <parent link="world"/>
        <child link="x"/>
        <origin xyz="0 0 2" rpy="0 0 0"/>
        <limit effort="1000.0" lower="-10" upper="10" velocity="0.5"/>
        <axis xyz="1 0 0"/>
    </joint>
    <link name="y"/>
    <joint name="y_joint" type="prismatic">
        <parent link="x"/>
        <child link="y"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <limit effort="1000.0" lower="-10" upper="10" velocity="0.5"/>
        <axis xyz="0 1 0"/>
    </joint>
    <link name="z"/>
    <joint name="z_joint" type="prismatic">
        <parent link="y"/>
        <child link="z"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <limit effort="1000.0" lower="-10" upper="10" velocity="0.5"/>
        <axis xyz="0 0 1"/>
    </joint>
    <link name="r"/>
    <joint name="r_joint" type="revolute">
        <parent link="z"/>
        <child link="r"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <limit effort="1000.0" lower="0" upper="6.283" velocity="0.5"/>
        <axis xyz="1 0 0"/>
    </joint>
    <link name="p"/>
    <joint name="p_joint" type="revolute">
        <parent link="r"/>
        <child link="p"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <limit effort="1000.0" lower="0" upper="6.283" velocity="0.5"/>
        <axis xyz="0 1 0"/>
    </joint>


    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.12 0.01 0.02"/>
            </geometry>
            <material name="yellow"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.12 0.01 0.02"/>
            </geometry>
            <material name="yellow"/>
        </collision>
    </link>
    <joint name="yy_joint" type="revolute">
        <parent link="p"/>
        <child link="base_link"/>
        <origin xyz="0 0 0" rpy="-1.57 0 0"/>
        <limit effort="1000.0" lower="0" upper="6.283" velocity="0.5"/>
        <axis xyz="0 -1 0"/>
    </joint>

    <link name="left_jaw">
        <visual>
            <geometry>
                <box size="0.05 0.01 0.02"/>
            </geometry>
            <origin rpy="0 0 1.57" xyz="-0.055 0.03 0"/>
            <material name="red"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.05 0.01 0.02"/>
            </geometry>
            <origin rpy="0 0 1.57" xyz="-0.055 0.03 0"/>
        </collision>
        <contact>
            <lateral_friction value="1"/>
        </contact>
    </link>
    <joint name="left_joint" type="prismatic">
        <parent link="base_link"/>
        <child link="left_jaw"/>
        <limit effort="1000.0" lower="0" upper="0.05" velocity="0.001"/>
    </joint>

    <link name="right_jaw">
        <visual>
            <geometry>
                <box size="0.05 0.01 0.02"/>
            </geometry>
            <origin rpy="0 0 1.57" xyz="0.055 0.03 0"/>
            <material name="green"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.05 0.01 0.02"/>
            </geometry>
            <origin rpy="0 0 1.57" xyz="0.055 0.03 0"/>
        </collision>
        <contact>
            <lateral_friction value="1"/>
        </contact>
    </link>
    <joint name="right_joint" type="prismatic">
        <parent link="base_link"/>
        <child link="right_jaw"/>
        <limit effort="1000.0" lower="-0.05" upper="0" velocity="-0.001"/>
    </joint>
</robot>
